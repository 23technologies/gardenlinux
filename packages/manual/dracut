#!/usr/bin/env bash
set -euo pipefail

. $(dirname $0)/.helper

sudo apt-get build-dep -y --no-install-recommends $src
apt-get source $src

cd $src-*/
patch -p1 < $srcDir/noperl.patch
dch -i 'moving pkg-config from Depends to Recommends'
dch -r ''
	
donotmove="$(ls ..)"
debuild
move_package .. $donotmove
